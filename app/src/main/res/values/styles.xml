<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Planties.InputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:background">@drawable/bg_input_default_primary</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="Widget.Planties.Button.Full" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minWidth">@dimen/width_342dp</item>
        <item name="android:minHeight">@dimen/height_50dp</item>
        <item name="android:layout_height">@dimen/height_44dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:state_enabled">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Planties.Button1</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.Planties.Button1</item>
    </style>

    <style name="Widget.Planties.InputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/Neutral3</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Planties.Subtitle1
        </item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.Planties.InputLayout.Full" parent="Widget.Planties.InputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_48dp</item>
    </style>

    <style name="Widget.Planties.Button.Full.Filled" parent="Widget.Planties.Button.Full">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/Neutral1</item>
    </style>

    <style name="Widget.Planties.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/Neutral5</item>
        <item name="android:textColor">@color/Neutral5</item>
        <item name="android:textColorHint">@color/Neutral3</item>
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textSize">@dimen/font_10sp</item>
    </style>

    <style name="Widget.Planties.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Planties.Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Planties.Caption2</item>
        <item name="android:textColor">@color/Neutral1</item>
        <item name="android:drawablePadding">@dimen/margin_6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">@dimen/margin_10dp</item>
        <item name="android:paddingVertical">@dimen/margin_8dp</item>
    </style>

    <style name="Widget.Planties.ButtonTab" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">@dimen/margin_6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Planties.ButtonTabItem</item>
        <item name="android:textColor">@color/Neutral1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">@dimen/margin_12dp</item>
        <item name="android:paddingVertical">@dimen/margin_8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Planties.Round.12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_12dp</item>
        <item name="cornerSizeTopLeft">@dimen/corner_12dp</item>
        <item name="cornerSizeBottomRight">@dimen/corner_12dp</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Planties.Round" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/size_17dp</item>
    </style>
</resources>