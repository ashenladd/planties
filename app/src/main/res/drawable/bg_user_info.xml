<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/Neutral2" />
            <corners android:radius="12dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/Neutral3" /> <!-- Set the border color -->
            <corners android:radius="12dp" /> <!-- Match the radius from the solid shape -->
        </shape>
    </item>
</layer-list>
